<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_degradado"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo -->

        <!-- Título -->

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Crear una cuenta"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Regístrate para continuar"
            android:textColor="#F3F4F6"
            android:textSize="16sp" />

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="10dp"/>

        <!-- Apellido -->
        <EditText
            android:id="@+id/etApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="10dp"/>

        <!-- ID Usuario -->
        <EditText
            android:id="@+id/etUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de usuario"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="10dp"/>

        <!-- Correo -->
        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="10dp"/>

        <!-- Correo de recuperación -->
        <EditText
            android:id="@+id/etCorreoRecuperacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo de recuperación"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="10dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="10dp"/>

        <!-- Confirmar contraseña -->
        <EditText
            android:id="@+id/etPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repite la contraseña"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="10dp"/>

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/checkTerminos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acepto los términos y condiciones"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Botón submit -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#866CA6"
            android:text="Registrar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- Texto de volver -->
        <TextView
            android:id="@+id/tvVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes cuenta? Inicia sesión"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>
</ScrollView>
